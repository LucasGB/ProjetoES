<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="83dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="-100dp"
        android:src="@drawable/logonovissimodenovo" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="Próximo ônibus UTFPR - Terminal"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/hrUTFPRTerminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XX:XX"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/verHorarios1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="hrUTF_Terminal"
        android:text="Ver todos os horários"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="18dp"
        android:text="Próximo ônibus Terminal - UTFPR"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/hrTerminalUTFPR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XX:XX"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/verHorarios2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="hrTerminal_UTF"
        android:text="Ver todos os horários"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:text="*Dados obtidos através da Viação Mourãoense e estão sujeito
a alterações.Não estão calculados nos horários eventuais
atrasos."
        android:textColor="#ffffff"
        android:textSize="9sp"

        />


</LinearLayout>
