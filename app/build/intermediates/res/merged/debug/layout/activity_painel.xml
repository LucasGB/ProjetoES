    <android.support.v4.widget.SlidingPaneLayout   
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:id="@+id/sliding_pane_layout"  
  android:layout_width="match_parent"  
  android:layout_height="match_parent" >  
          <ListView
              android:background="@drawable/fundo"
    android:id="@+id/left_pane"  
    android:layout_width="280dp"  
    android:layout_height="match_parent"  
    android:layout_gravity="left" />  


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo"
    android:orientation="vertical"
        android:weightSum="1">
                  <TextView
            android:id="@+id/nomeAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logado como:"
            android:textSize="12sp"
            android:layout_gravity="left" />



            <ImageView
                android:id="@+id/logo"
                android:layout_width="220dp"
                android:layout_height="93dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="-100dp"
                android:src="@drawable/logo_guia" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua próxima aula será de:"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <TextView
         android:id="@+id/materia"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="10dp"
         android:text="Geometria Analitica "
         android:textSize="25sp"
         android:textStyle="bold"
         android:layout_gravity="center" />

        <TextView
            android:id="@+id/blocoAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B101"
            android:textSize="55sp"
            android:layout_gravity="center" />
              <TextView
            android:id="@+id/faixaHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00-13:30"
            android:textSize="18sp"
            android:layout_gravity="center" />
                    <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="segunda-feira"
            android:textSize="18sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/faltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Faltas: 2/18"
            android:textSize="18sp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/frequencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="Frequencia: 85%"
            android:textSize="18sp"
            android:layout_gravity="center" />





        <LinearLayout
                          android:id="@+id/botoes"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingBottom="@dimen/activity_vertical_margin"
                          android:paddingLeft="@dimen/activity_horizontal_margin"
                          android:paddingRight="@dimen/activity_horizontal_margin"
                          android:paddingTop="@dimen/activity_vertical_margin"
                          android:layout_gravity="center"

                           >
    
                      <Button
                          android:id="@+id/aulaAnterior"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Aula anterior"
                          android:layout_gravity="left"
                           android:textSize="15sp"
                           android:onClick = "anteriorAula"
                           />

                      <Button
                          android:id="@+id/aulaProxima"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                                                    android:layout_gravity="right"
                                                           		android:onClick = "proximaAula"
                                                    
                           android:textSize="15sp"
                          android:text="Proxima aula" />
                      </LinearLayout>

    </LinearLayout>
  </android.support.v4.widget.SlidingPaneLayout>